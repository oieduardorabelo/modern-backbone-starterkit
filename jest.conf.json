{
  "bail": true,
  "verbose": true,
  "collectCoverageFrom": [
    "app/**/*.js",
    "!**/node_modules/**"
  ],
  "testPathDirs": [
    "<rootDir>/tests"
  ],
  "testRegex": "_test\\.(js)$",
  "transform": {
    "^.+\\.js$": "<rootDir>/jest.jsPreprocessor.js",
    "^.+\\.hbs$": "<rootDir>/jest.hbsPreprocessor.js"
  }
}
